// Package.json scripts for testing and performance
{
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "analyze": "npm run build && open dist/stats.html",
    "build:analyze": "vite build --mode production",
    "perf": "lighthouse http://localhost:4173 --output html --output-path ./lighthouse-report.html"
  }
}